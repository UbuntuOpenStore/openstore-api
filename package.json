{
  "name": "openappstore-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "nodemon ./src/index.ts",
    "build": "tsc",
    "lint": "eslint ./src/**/*.ts ./tests/**/*.ts --fix",
    "lint:json": "jsonlint -q ./src/api/json/category_icons.json && jsonlint -q ./src/api/json/default_frameworks.json && jsonlint -q ./src/api/json/discover_apps.json",
    "test": "PORT=8888 NODE_ENV=testing MONGODB_URI=mongodb://127.0.0.1:27017 MONGODB_DB=openstore-test ELASTICSEARCH_URI=http://127.0.0.1:9200/ ELASTICSEARCH_INDEX=openstore_test mocha -r tsconfig-paths/register -r ts-node/register --reporter dot tests/**/*.ts",
    "coverage": "PORT=8888 NODE_ENV=testing MONGODB_URI=mongodb://127.0.0.1:27017 MONGODB_DB=openstore-test ELASTICSEARCH_URI=http://127.0.0.1:9200/ ELASTICSEARCH_INDEX=openstore_test nyc mocha -r tsconfig-paths/register -r ts-node/register --reporter dot tests/**/*.ts",
    "test:ci": "NODE_ENV=testing nyc mocha -r tsconfig-paths/register -r ts-node/register --reporter dot tests/**/*.ts",
    "update-pot-file": "src/bin/update-pot-file"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/theopenstore/openstore-api.git"
  },
  "author": "Brian Douglass",
  "license": "GPL-3.0",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js, json"
  },
  "dependencies": {
    "@sentry/node": "^5.15.4",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "click-parser": "^4.2.2",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "elasticsearch": "^16.7.1",
    "express": "^4.17.1",
    "gettext-parser": "^4.0.3",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mime": "^3.0.0",
    "mongoose": "^5.9.9",
    "multer": "^1.4.2",
    "node-gettext": "^3.0.0",
    "node-uuid": "^1.4.8",
    "p-limit": "^3.0.2",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.12",
    "passport-gitlab2": "^5.0.0",
    "passport-localapikey": "^0.0.3",
    "passport-ubuntu": "^0.2.0",
    "request": "^2.88.2",
    "rss": "^1.2.2",
    "sanitize-html": "^2.5.3",
    "shuffle-array": "^1.0.1",
    "sleepjs": "^4.0.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/gettext-parser": "^4.0.1",
    "@types/lodash": "^4.14.176",
    "@types/mime": "^2.0.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@types/node-gettext": "^3.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "chai": "^4.2.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-bhdouglass": "0.0.2",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.25.2",
    "jsonlint": "^1.6.3",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.14",
    "nyc": "^15.0.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  }
}
